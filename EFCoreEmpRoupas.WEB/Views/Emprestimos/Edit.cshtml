@model VW_RoupaEmprestimo

@{
    ViewData["Title"] = "Edit";
}

<h2>Alterar dados do emprestimo</h2>

<h4>Altere o(s) dado(s) conforme necessidade</h4>
<hr />

<div>
    <a class="btn btn-primary btn-sm" asp-action="Index"><i class="fa fa-arrow-left"> Voltar</i></a>
</div>


<div class="row">
    <div class="col-sm-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-sm-8">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
            </div>

            <div class="card">
                <div class="card-header">Informações sobre o emprestimo</div>
                <div class="card-body row">

                    <div class="form-group form-group col-sm-8">

                        <input type="hidden" asp-for="IdRoupa" class="form-control" />
                        <span asp-validation-for="IdRoupa" class="text-danger"></span>

                        <input type="hidden" asp-for="IdCliente" class="form-control" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>

                        <label asp-for="Nome" class="control-label"></label>
                        <input readonly asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>

                        <label asp-for="RoupaNome" class="control-label"></label>
                        <input readonly asp-for="RoupaNome" class="form-control" />
                        <span asp-validation-for="RoupaNome" class="text-danger"></span>


                        <label asp-for="DataEmprestimo" class="control-label"></label>
                        <input readonly asp-for="DataEmprestimo" class="form-control" />
                        <span asp-validation-for="DataEmprestimo" class="text-danger"></span>

                        <label asp-for="DataEntrga" class="control-label"></label>
                        <input readonly asp-for="DataEntrga" class="form-control" />
                        <span asp-validation-for="DataEntrga" class="text-danger"></span>

                        <div style="color: red;" class="form-group form-check">
                            <br />
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Entegue" /> @Html.DisplayNameFor(model => model.Entegue)
                            </label>
                        </div>

                    </div>

                </div>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o"></i> Alterar a caixa de texto -> "Foi Entregue ?"</button>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

