@model EFCoreEmpRoupas.DATA.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h2>Alterar Dados Cliente</h2>

<h4>Altere o(s) dado(s) conforme necessidade</h4>
<hr />

<div>
    <a class="btn btn-primary btn-sm" asp-action="Index"><i class="fa fa-arrow-left"> Voltar</i></a>
</div>


<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-6">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
            </div>

            <div class="card">
                <div class="card-header">Informações do Cliente</div>
                <div class="card-body row">

                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label asp-for="CPF" class="control-label"></label>
                            <input asp-for="CPF" class="form-control" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <br />

            <div class="card">
                <div class="card-header">Contato</div>
                <div class="card-body row">

                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o"></i> Alterar dados do cliente</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
