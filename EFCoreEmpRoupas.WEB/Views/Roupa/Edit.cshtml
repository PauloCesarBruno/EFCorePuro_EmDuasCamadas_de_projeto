@model EFCoreEmpRoupas.DATA.Roupa

@{
    ViewData["Title"] = "Edit";
}


<h2>Alterar dados da roupa</h2>

<h4>Altere o(s) dado(s) conforme necessidade</h4>
<hr />

<div>
    <a class="btn btn-primary btn-sm" asp-action="Index"><i class="fa fa-arrow-left"> Voltar</i></a>
</div>


<div class="row">
    <div class="col-sm-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-sm-8">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
            </div>

            <div class="card">
                <div class="card-header">Informações sobre a Roupa</div>
                <div class="card-body row">

                    <div class="form-group form-group col-sm-8">
                        <label asp-for="RoupaNome" class="control-label"></label>
                        <input asp-for="RoupaNome" class="form-control" />
                        <span asp-validation-for="RoupaNome" class="text-danger"></span>
                    </div>
                    <div class="form-group form-group col-sm-8">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group form-group col-sm-8">
                        <label asp-for="ValorLocacao" class="control-label"></label>
                        <input asp-for="ValorLocacao" class="form-control" />
                        <span asp-validation-for="ValorLocacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o"></i> Alterar dados do livro</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}